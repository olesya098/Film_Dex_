<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/divider3"
        android:layout_width="8dp"
        android:layout_height="match_parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/film_card"
        android:layout_width="216dp"
        android:layout_height="370dp"

        android:background="@color/My"
        app:cardBackgroundColor="@color/My"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/film_image"
                android:layout_width="216dp"
                android:layout_height="300dp"

                android:padding="14dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/_190802632" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/film_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Venom"
                    android:textColor="@color/white"
                    android:textSize="18dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/film_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 2018"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/film_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text=" 18 +"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/film_reiting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Рейтинг 9.2"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
